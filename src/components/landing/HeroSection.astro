---
// src/components/landing/HeroSection.astro
import { ArrowRight, MessageSquareText, TrendingUp } from "lucide-react"; // Updated icons for better fit

// Import the NEW React component for the visual part
import { HeroVisual } from "./HeroVisual";
---

<section
    class="relative min-h-[100dvh] flex items-center justify-center overflow-hidden bg-slate-50 pt-32 lg:pt-0"
>
    <!-- BACKGROUND FX (These are fine, they add a modern feel) -->
    <div class="absolute inset-0 z-0">
        <div
            class="absolute inset-0 bg-[linear-gradient(to_right,#80808012_1px,transparent_1px),linear-gradient(to_bottom,#80808012_1px,transparent_1px)] bg-[size:24px_24px] lg:bg-[size:40px_40px] [mask-image:radial-gradient(ellipse_60%_50%_at_50%_50%,#000_70%,transparent_100%)]"
        >
        </div>
    </div>
    <div
        class="absolute top-[-10%] right-[-10%] w-[500px] h-[500px] bg-blue-500/10 rounded-full blur-[120px] pointer-events-none"
    >
    </div>
    <div
        class="absolute bottom-[-10%] left-[-10%] w-[400px] h-[400px] bg-teal-400/10 rounded-full blur-[100px] pointer-events-none"
    >
    </div>

    <!-- MAIN CONTAINER -->
    <div
        class="container px-6 z-10 grid lg:grid-cols-2 gap-16 items-center w-full max-w-7xl mx-auto py-20 lg:py-0"
    >
        <!-- LEFT COLUMN: THE NEW, SIMPLE CONTENT -->
        <div
            class="relative z-10 text-center lg:text-left flex flex-col items-center lg:items-start"
        >
            <!-- Small Badge/Tagline -->
            <div
                class="inline-flex items-center gap-2 px-4 py-2 rounded-full bg-blue-50 text-blue-700 text-sm font-bold mb-6 border border-blue-100 animate-fade-in-up"
            >
                <MessageSquareText size={16} />
                Your Social Media Partner
            </div>

            <!-- NEW HEADLINE: Clear, benefit-driven -->
            <h1
                class="text-5xl sm:text-6xl lg:text-7xl font-black tracking-tighter text-slate-900 mb-6 leading-tight animate-fade-in-up delay-100"
            >
                Get More Customers <br />
                <span
                    class="text-transparent bg-clip-text bg-gradient-to-r from-blue-600 to-teal-500"
                >
                    From Social Media.
                </span>
            </h1>

            <!-- NEW PARAGRAPH: Explains what you do in simple terms -->
            <p
                class="text-lg sm:text-xl text-slate-600 mb-10 max-w-lg leading-relaxed font-medium mx-auto lg:mx-0 animate-fade-in-up delay-200"
            >
                We handle all your social media: stunning posts, engaging reels,
                and clever scripts. Focus on running your business while we
                bring in new clients for you.
            </p>

            <!-- NEW BUTTONS: Clear, simple calls to action -->
            <div
                class="flex flex-col sm:flex-row gap-4 w-full sm:w-auto mb-12 animate-fade-in-up delay-300"
            >
                <a
                    href="#contact"
                    class="inline-flex items-center justify-center h-14 px-8 text-lg font-bold bg-slate-900 text-white hover:bg-slate-800 shadow-xl shadow-slate-900/20 rounded-xl transition-all w-full sm:w-auto group"
                >
                    Get Your Free Strategy Call
                    <ArrowRight
                        size={20}
                        className="ml-2 group-hover:translate-x-1 transition-transform"
                    />
                </a>
                <a
                    href="#portfolio"
                    class="inline-flex items-center justify-center h-14 px-8 text-lg font-bold bg-transparent border-2 border-slate-200 text-slate-600 hover:border-blue-500 hover:text-blue-600 hover:bg-blue-50 rounded-xl transition-all w-full sm:w-auto group"
                >
                    See Our Work
                </a>
            </div>

            <!-- "Trusted By" section remains similar, but simplified text -->
            <div class="w-full flex justify-center lg:justify-start">
                <div
                    class="flex items-center gap-4 border-t border-slate-200 pt-8 animate-fade-in-up delay-400"
                >
                    <div class="p-2 bg-green-50 text-green-700 rounded-lg">
                        <TrendingUp size={20} />
                    </div>
                    <div class="text-left">
                        <div
                            class="text-xs font-bold text-slate-400 uppercase tracking-widest"
                        >
                            Trusted for Growth By
                        </div>
                        <div class="text-sm font-bold text-slate-900">
                            20+ Businesses & Brands
                        </div>
                    </div>
                </div>
            </div>
        </div>

        <!-- RIGHT COLUMN: THE NEW VISUAL -->
        <!-- This is where we load the interactive React component -->
        <HeroVisual client:visible />
    </div>
</section>
